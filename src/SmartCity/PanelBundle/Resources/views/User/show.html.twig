{% extends 'SmartCityPanelBundle:Common:base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ user.type }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.status }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.cellphone }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ user.comment }}</td>
            </tr>
            <tr>
                <th>Global</th>
                <td>{{ user.global }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ user.visible }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ user.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ user.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('panel_user_index') }}">
            Back to the list
        </a>
    </li>
    <li>
    </li>
    {# <li>{{ form(delete_form) }}</li> #}
</ul>
{% endblock %}
