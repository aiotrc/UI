{% extends 'SmartCityPanelBundle:Common:base.html.twig' %}

{% block title %}
    {% trans from 'labels' %}label.user.list{% endtrans %}
{% endblock title %}

{% block body -%}

    <div class="page-bar">
        
        {% set breadcrumbs_items = 
            [
                ['label.user.list'|trans([], 'labels'), '#' ],
            ] 
        %}
        {{ toolbox.breadcrumbs(breadcrumbs_items) }}

        <div class="page-toolbar">
            <div class="btn-group pull-left">
                <a href="{{ path('panel_user_new') }}" id="add_new_user" class="btn blue btn"><i class="fa fa-plus-circle"></i> {% trans from "labels" %}label.user.new{% endtrans %}</a>
            </div>
        </div>
    </div>

    {{ datatable_render_html(datatable) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ datatable_render_js(datatable) }}
    
    {% javascripts
        'bundles/smartcitypanel/js/UserRole.js'

        filter='?jsqueeze'
    %}
        <script src="{{ asset_url }}"></script>

    {% endjavascripts %}

{% endblock %}

{% block documentReady %}
    UserRole.init();
{% endblock %}