{% extends 'SmartCityPanelBundle:Common:base.html.twig' %}
{% import 'SmartCityPanelBundle:Common:form.html.twig' as _form %}

{% form_theme edit_form _form %}

{% block title %}
    {% trans with {'%name%': edit_form.title.vars["value"]} from "labels" %}label.role.edit{% endtrans %}
{% endblock title %}


{% block body -%}
    
    {{ form_start(edit_form) }}
    <div class="page-bar">

        {% set breadcrumbs_items = 
            [
                ['label.role.list'|trans([], 'labels'), path('panel_role_index') ],
                ['label.role.edit'|trans({'%name%': edit_form.title.vars["value"]}, "labels"), '' ]
            ] 
        %}
        {{ toolbox.breadcrumbs(breadcrumbs_items) }}

        <div class="page-toolbar">
            <div class="btn-group pull-left">
                {{ form_widget(edit_form.submit, {'attr': { 'class': 'btn blue btn-fit-height'}}) }}
            </div>
        </div>

    </div>

    {% set basic_data %}
        {{ form_row(edit_form.title) }}
        {{ form_row(edit_form.role) }}
        {{ form_row(edit_form.visible) }}
    {% endset %}

    {% set actiongroups_data %}
        <div class="form-group">
            <div class="col-sm-12">
                <input type="text" id="filter_input" class="form-control" placeholder="Filter">
            </div>
        </div>
        <hr>
        {{ form_widget(edit_form.actionGroups) }}
    {% endset %}

    
    <div class="row">
        {{ toolbox.portlet('label.basic_data', '', basic_data) }}
        {{ toolbox.portlet('label.actiongroup.title', '', actiongroups_data) }}
    </div>

    {{ form_end(edit_form) }}
    {# {{ form(delete_form) }} #}

    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    {% javascripts
        'bundles/smartcitypanel/js/ItemFiltering.js'

        filter='?jsqueeze'
    %}
        <script src="{{ asset_url }}"></script>

    {% endjavascripts %}

{% endblock %}

{% block documentReady %}

    ItemFiltering.actionObj = '#Role_actionGroups';
    ItemFiltering.init();
    
{% endblock %}
